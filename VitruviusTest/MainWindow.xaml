<Window x:Class="VitruviusTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640" Loaded="Window_Loaded">
    <Grid>
        <Image Name="camera" />
        <Canvas Name="canvas" />
        <TextBlock Name="tblHeights" Style="{StaticResource TextBlockStyle}" Text="User heights" />
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <Button Content="Color" Style="{StaticResource ButtonStyle}" Click="Color_Click" />
            <Button Content="Depth" Style="{StaticResource ButtonStyle}" Click="Depth_Click" />
        </StackPanel>
    </Grid>
</Window>
